@model IEnumerable<Expeditions.Models.Peak>

@{
    ViewData["Title"] = "Himalayan Expeditions";
}

<div class="row">
    <div class="col">
        <div class="text-center">
            <img src="~/images/Mount_Everest_as_seen_from_Drukair2_PLW_edit.jpg" alt="Mount Everst as seen from Drukair2" width="1024" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <h2 class="text-center">Climbing in the Himalaya</h2>
        <p class="text-center" id="stats">@*Put stats from AJAX question here*@</p>
        <table class="table table-dark table-striped table-sm w-75" style="margin: 0 auto;">
            <thead>
                <tr>
                    <th scope="col" style="text-align:center">Rank</th>
                    <th scope="col" style="text-align:center">Mountain</th>
                    <th scope="col">Height</th>
                    <th scope="col">First climbed</th>
                    <th scope="col"># of Expeditions</th>
                </tr>
            </thead>
            <tbody>
                @{int rank = 0;} 
                @foreach (var item in Model)
                {
                    rank++;
                    <tr>
                        <td>
                            @rank
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Height)
                        </td>
                        @if (item.ClimbingStatus)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstAscentYear)
                            </td>
                        }
                        else
                        {
                            <td>
                                --
                            </td>
                        }
                        <td>
                            @item.Expeditions.Count
                        </td>
                    </tr>
                }
                </tbody>
        </table>
    </div>
</div>



